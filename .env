# Environment
ENVIRONMENT=development
DEBUG=True

# MongoDB - Use one of these options:
# Option 1: Local MongoDB (requires MongoDB installed and running)
# MONGODB_URL=mongodb://localhost:27017

# Option 2: MongoDB Atlas Cloud (free tier available)
# Get your connection string from https://www.mongodb.com/cloud/atlas
# Use DB_PASSWORD env var; URL-encode special chars (e.g., Tech@3112 -> Tech%403112)

# Option 3: MongoDB Atlas Connection
MONGODB_URL=mongodb+srv://tech_db_user:Tech3112@cluster0.empai1t.mongodb.net/?appName=Cluster0

DATABASE_NAME=inventory_erp

# JWT Settings
SECRET_KEY=your-super-secret-key-min-32-characters-change-in-production-123456789
ALGORITHM=HS256

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Login Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=30
PASSWORD_HASH_ROUNDS=12

# CORS
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173","http://127.0.0.1:3000"]

# Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
